<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="group">
        <div class="label">
            <%= f.input :email,
            required: false,
            autofocus: true,
            input_html: { autocomplete: "email", class:"input" } %>
        </div>
    </div>
    <div class="group">
        <div class="label">
            <%= f.input :password,
            required: false,
            input_html: { autocomplete: "current-password", class:"input" } %>
        </div>
    </div>
    <div class="group">
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="group">
        <%= f.button :submit, "Login", class:"button" %> 
    </div>
    <div class="group">
        <%= link_to "Forgot your password?", new_password_path(resource_name) %> 
    </div>
<% end %>