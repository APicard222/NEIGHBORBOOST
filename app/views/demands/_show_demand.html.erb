<div class="show-card-demand-container">
  <div class="show-card-demand-header">
    <img src= <%= image_path('tools.png') %> alt="tools">
    <h1><%= demand.title %></h1>
  </div>
  <hr>
  <div class="show-card-demand-description">
    <p><%= demand.description %></p>
    <p>Start: <%= demand.start_date %></p>
    <p>End: <%= demand.end_date %></p>
  </div>
  <hr>
  <div class="show-card-demand-btns">
    <div class="btn-accept"><i class="fas fa-check"></i>Accept</div>
    <div class="btn-decline"><i class="fas fa-undo-alt"></i>Decline</div>
  </div>
  <i class="far fa-times-circle close-show-demand" aria-hidden="true" data-action="click->demands-index#closeShowModal"></i>
</div>
